@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
    background-color: #f6f6f6;
    font-family: tahoma, lucida console, arial;
}

.TaskContainer {
    margin-left: 24px;
    margin-top: 2px;
    width: 200px;
    position: relative;
}

.TaskBody {
    border: 1px solid #999;
    padding: 3px 15px;
    border-radius: 3px;
    position: relative;
}

    .TaskBody.Active {
        background-color: #BCFFBC;
    }

    .TaskBody.Inactive {
        background-color: #ddd;
    }

    .TaskBody.Complete {
        color: #888;
        background-color: #EEE;
    }



.TaskCompletionPercentage {
    float: right;
}

.TaskDescription {
    border: 1px solid #999;
    border-top: none;
    border-bottom-left-radius: 3px;
    border-bottom-right-radius: 3px;
    margin-left: 10px;
    margin-right: 3px;
    padding: 5px;
    padding-right: 20px;
    position: relative;
}

    .TaskDescription p {
        padding: 0px;
        margin: 0px;
    }


input {
    padding-left: 5px;
}

.IconCancel::before {
    content: '\2715';
    position: absolute;
    font-size: 24px;
    left: -1px;
    top: -2px;
    color: black;
}

.MediumButton {
    top: 3px;
    height: 24px;
    width: 24px;
    position: relative;
}

.IconSave::before {
    content: '';
    position: absolute;
    border-bottom: 3px solid black;
    border-right: 3px solid black;
    height: 14px;
    width: 7px;
    transform: rotate(45deg);
    top: 0px;
    left: 6px;
}


textarea {
    height: inherit;
}




.Editing {
    background-color: #FFB800;
    border-color: #000;
}

.TaskDescriptionInput {
    width: 100%;
    box-sizing: content-box;
}



button:active {
    background-color: #aaffaa;
}


input, select, button, .MediumButton, textarea {
    Height: 24px;
    padding: 3px 0px;
    border: 1px solid #000;
    border-radius: 2px;
    display: inline-block;
    background-color: #FFF;
    box-sizing: border-box;
    margin: 0px 0px;
}

.CollapsingButton {
    padding: 0px;
    font-family: arial;
    border: 1px solid #999999;
    border-radius: 2px;
    margin: 0px;
    height: 20px;
    width: 20px;
    font-size: 12px;
    text-align: center;
    display: inline-block;
    box-sizing: content-box;
    position: relative;
}

.TaskChildExpanderButton {
    position: absolute;
    top: 2px;
    left: -23px;
    color: #666;
}

.CollapsingButton.Collapsed::before {
    content: "+";
    Font-Size: 25px;
    left: 3px;
    top: -3px;
    position: absolute;
}

.CollapsingButton.Expanded::before {
    content: "_";
    font-size: 18px;
    position: absolute;
    top: -8px;
    left: 5px;
}

.TaskChildContainer {
    border-left: 1px solid #DDD;
    border-left-style: dashed;
}

.TaskStatusSelect {
    width: 85px;
    margin-top: 2px;
}

.IconAdd::before {
    content: '+';
    font-size: 30px;
    position: absolute;
    top: -5px;
    left: 2px;
}

.TaskChildOptions {
    margin-left: 30px;
}

    .TaskChildOptions a {
        margin-right: 12px;
    }

.DescriptionExpanderButton {
    position: absolute;
    right: 3px;
    top: 3px;
}

.ChildActionLink {
    color: #666;
    font-size: 12px;
}

.EditActionLink {
    color: #414141;
    font-size: 12px;
    margin-left: 3px;
}

.CompleteActiveBar {
}
</style>
