<Window x:Class="TcpFileMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:Views="clr-namespace:TcpFileMover.Views"
        Title="ByteHose"
        Width="300" Height="200">
    <DockPanel>
        <TabControl>
            <TabItem Header="Send" Width="60" >
                <Views:Send DataContext="{Binding SendViewModel}"></Views:Send>
            </TabItem>
            <TabItem Header="Receive" Width="60" >
                <Views:Receive DataContext="{Binding ReceiveViewModel}"></Views:Receive>
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>
